<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/papel_wallpaper"
    tools:context=".ui.books.details.DetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDetailsActivity"
        android:layout_width="match_parent"
        android:background="@color/black"
        app:titleTextColor="@color/white"
        android:theme="@style/ToolbarColoredBackArrow"
        app:titleTextAppearance="@color/material_on_background_emphasis_high_type"
        android:layout_height="?android:attr/actionBarSize"/>

    <LinearLayout
        android:background="@drawable/shape_books_item"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="3dp"
        android:elevation="8dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/title_label"/>

        <TextView
            android:id="@+id/detailsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="4dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/amatic_sc"
            tools:text="Books_Title_Test_test"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/description_label"/>

        <TextView
            android:id="@+id/detailsDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="4dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/amatic_sc"
            tools:text="Books_Description_Test_test_Test_Test_test_test_test
            \ntest_Test_test_test_test_Test_test_test_test"/>

    </LinearLayout>

</LinearLayout>